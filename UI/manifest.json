{
  "manifest_version": 3,
  "name": "AI Quiz Assistant",
  "version": "2.0",
  "description": "Enhanced AI Quiz Assistant with bilingual support, bulk processing, and auto-completion for fastest quiz completion.",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://127.0.0.1:*/*",
    "*://quiz.mygov.in/*",
    "*://*.mygov.in/*",
    "file:///D:/Web/Chrome/quiz.html",
    "*://64.227.188.233:*/*",
    "*://cloud.digitalocean.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Enhanced AI Quiz Assistant",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://quiz.mygov.in/*", "*://*.mygov.in/*", "file:///D:/Web/Chrome/quiz.html"],
    "js": ["theme-config.js", "content.js"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [{
    "resources": ["*.js", "*.html"],
    "matches": ["*://quiz.mygov.in/*", "*://*.mygov.in/*"]
  }]
}